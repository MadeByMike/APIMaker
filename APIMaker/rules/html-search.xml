<?xml version="1.0" encoding="UTF-8"?>
<config table="example" resultsPerPage="20" recordsAllowed="500">
	<filter>
		<group>
			<field>
				<objectName>id</objectName>
				<formName>id</formName>
				<defaultValue></defaultValue>	
				<condition>equals</condition>
			</field>
			<field>
				<objectName>name</objectName>
				<formName>name</formName>
				<defaultValue></defaultValue>	
				<condition>contains</condition>
			</field>
			<field>
				<objectName>email</objectName>
				<formName>email</formName>
				<defaultValue></defaultValue>	
				<condition>contains</condition>
			</field>
			<field>
				<objectName>address</objectName>
				<formName>address</formName>
				<defaultValue></defaultValue>	
				<condition>contains</condition>
			</field>
			<field>
				<objectName>lorem</objectName>
				<formName>lorem</formName>
				<defaultValue></defaultValue>	
				<condition>contains</condition>
			</field>
			<field>
				<objectName>date</objectName>
				<formName>date</formName>
				<defaultValue></defaultValue>	
				<condition>equals</condition>
			</field>
			<field>
				<objectName>country</objectName>
				<formName>country</formName>
				<defaultValue></defaultValue>	
				<condition>contains</condition>
			</field>
			<field>
				<objectName>latlng</objectName>
				<formName>latlng</formName>
				<defaultValue></defaultValue>	
				<condition>contains</condition>
			</field>
		</group>
	</filter>
	<withResult>
		<field>				
			<objectName>name</objectName>				
			<function>replace</function>
			<find>mike</find>				
			<replace>Sir Mike</replace>				
		</field>
		<field>				
			<objectName>date</objectName>					
			<function>formatDate</function>			
			<format>D d M, Y</format>				
		</field>
	</withResult>
	<sort>
		<objectName>id</objectName>
		<sortDirection>ASC</sortDirection>
	</sort>
	<errorMsg>
		<![CDATA[
			<p>No results found</p>
		]]>
	</errorMsg>
	<template>
		<![CDATA[
			{{#summary}} 
				<p>Page {{page}} of {{pages}}, Showing ({{start}} - {{end}}) of {{total}} </p>
			{{/summary}}
			<form action="" method="get">
				<input type="hidden" name="rules" value="search" />
				Name: <input name="name" /> <br/>
				Id: <input name="id" /> <br/>
				Country: <input name="country" /> <br/>
				Date: <input name="date" /> <br/>
				<input type="submit" /> <br/>
			</form>
			<table>
			{{#results}}
				<tr>
					<td>{{id}}</td>
					<td>{{name}}</td>
					<td>{{email}}</td>
					<td>{{address}}</td>
					<td>{{lorem}}</td>
					<td>{{date}}</td>
					<td>{{country}}</td>
					<td>{{latlng}}</td>
				</tr>
			{{/results}}
			</table>
		]]>
	</template>
</config>